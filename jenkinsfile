pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'sonarserver' // Jenkins SonarQube configuration
        NEXUS_URL = 'http://13.127.99.114:8086' // Nexus URL
        DOCKER_HUB_CREDENTIALS = 'dockerid' // Docker Hub credentials
        DOCKER_IMAGE = 'vishnusoman85/react-app' // Docker image name
        DOCKER_TAG = "1.0.${BUILD_NUMBER}" // Docker image tag
        NEXUS_CREDENTIALS_ID = 'nexuslogin' // Jenkins credentials ID for Nexus login
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64' // Java 17 Home directory
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}" // Add Java to PATH
        SONAR_SCANNER_HOME = '/opt/sonar-scanner/bin' // Sonar Scanner home
    }

    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Beerus-cmd/payment_application.git'
            }
        }

        stage('Code Quality Check') {
            steps {
                withSonarQubeEnv("${SONARQUBE_SERVER}") {
                    sh """
                        ${SONAR_SCANNER_HOME}/sonar-scanner \\
                            -Dsonar.projectKey=payment-app \\
                            -Dsonar.sources=./ \\
                            -Dsonar.java.binaries=.
                    """
                }
            }
        }

        stage('Frontend Build') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'ng build --prod'
                }
            }
        }

        stage('Backend Build') {
            steps {
                dir('backend') {
                    sh 'pip install -r requirements.txt'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                sh 'docker build -t payment-app-frontend:latest ./frontend'
                sh 'docker build -t payment-app-backend:latest ./backend'
            }
        }
    }
}

